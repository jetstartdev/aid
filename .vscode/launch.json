{
    "configurations": [
        {
            "name": "Next.js: browser",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/next",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "skipFiles": ["<node_internals>/**"],
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        }
    ]
}